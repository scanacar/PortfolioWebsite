@using EntityLayer.Concrete
@model List<About>

@foreach (var item in Model)
{
    <div class="section pt-4 px-3 px-lg-4" id="about">
        <div class="container-narrow">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h4 my-2">@item.title</h2>
                    <p>@item.description</p>
                    <div class="row mt-3">
                        <div class="col-sm-2">
                            <div class="pb-1">Age:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.age</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">E-mail:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.mail</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Phone:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.phone</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Address:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@item.address</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100" style="border-radius=50%"><img class="avatar img-fluid mt-2" src="@item.imageUrl" width="400" height="400" alt="Sadık Can Acar" /></div>
            </div>
        </div>
    </div>
}